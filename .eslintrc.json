{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "plugins": [
        "react"
    ],
    "ecmaFeatures":{
        "jsx": true
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-unused-vars": 1,
        "no-shadow": 0,
        "func-names": 0,
        "indent": [2, 4],
        "max-len": [2, 125],
        "no-case-declarations": 0,
        "global-require": 0
    }
}
